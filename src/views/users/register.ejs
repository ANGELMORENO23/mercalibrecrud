<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs", {title: 'Todos los productos'})%>

        

        <body>
            <!-- Header -->
            <%- include("../partials/headerNavbar.ejs")%>
            <!-- /Header -->
        
        <main class="main-reg-caja">
           
            <form  class="main-form" action="/users/register" method="post">
                    <section>
                        <h4 class="h1_register">Datos Personales</h4>
                        <article class="articulo_registro_main">
                            <label for="nombre"></label>
                            <input class="imput_register" type="text" name="nombre" id="nombre" placeholder="Ingresa nombre" value="<%= locals.old && old.nombre %>">
                            <% if (locals.errors && errors.nombre) { %>
                                <p class="feedback"><%= errors.nombre.msg %></p>
                                <% } %>
                        </article>
                        <article class="articulo_registro_main">
                            <label for="nombre de usuario"></label>
                            <input class="imput_register" type="text" name="apellido" id="usuario" placeholder="Ingresa apellido"  value="<%= locals.old && old.apellido %>">
                            <% if (locals.errors && errors.apellido) { %>
                                <p class="feedback"><%= errors.apellido.msg %></p>
                                <% } %>
                        </article>
                        <article class="articulo_registro_main">
                            <label for="email"></label>
                            <input class="imput_register" type="email" name="email" id="email" placeholder="Ingresa tu email"  value="<%= locals.old && old.email %>" >
                            <% if (locals.errors && errors.email) { %>
                                <p class="feedback"><%= errors.email.msg %></p>
                                <% } %>
                        </article>
                    </section>
                   
                   
                    
                    <section>
                        <article class="articulo_registro_main">
                            <h4 class="h1_register">Seguridad</h4>
                            <label for="contraseña"></label>
                            <input class="imput_register" type="password" name="contraseña" id="contraseña" placeholder="Ingresa contraseña" value="<%= locals.old && old.contraseña %>" >
                            <% if (locals.errors && errors.contraseña) { %>
                                <p class="feedback"><%= errors.contraseña.msg %></p>
                                <% } %>
                        </article>
                        
                    </section>
                        <article class="articulo_registro_main">
                            <button class="btn_enviar_registro" type="submit">REGISTRAR</button>
                            <button type="reset" class="btn_reset_registro">BORRAR</button>
                        </article>
                </form>
            </main>
        
                <!-- footer -->
                <%- include("../partials/footer.ejs")%>
                <!-- /footer -->
            </body>
        </html>
            